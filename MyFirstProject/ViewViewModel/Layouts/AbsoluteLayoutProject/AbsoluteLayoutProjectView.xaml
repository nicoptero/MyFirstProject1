<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.Layouts.AbsoluteLayoutProject.AbsoluteLayoutProjectView"
             Title="{Binding Title}">
    
    <ContentPage.Content>
        <AbsoluteLayout>
                <BoxView Color="DarkGreen"
                     AbsoluteLayout.LayoutBounds="1, 1, 50, 100"
                     AbsoluteLayout.LayoutFlags="PositionProportional"/>
                <BoxView Color="LightGoldenrodYellow"
                     AbsoluteLayout.LayoutBounds="0, 0.2, 50, 100"
                     AbsoluteLayout.LayoutFlags="PositionProportional"/>
                <BoxView Color="Purple"
                     AbsoluteLayout.LayoutBounds="1, 0.5, 25, 100"
                     AbsoluteLayout.LayoutFlags="PositionProportional"/>
                <BoxView Color="HotPink"
                     AbsoluteLayout.LayoutBounds="0.5, 1, 25, 100"
                     AbsoluteLayout.LayoutFlags="PositionProportional"/>
                <Label Text="Hello World"
                   AbsoluteLayout.LayoutBounds="0.5, 0.5, 100, 25"
                   AbsoluteLayout.LayoutFlags="PositionProportional"/>
            </AbsoluteLayout>
 
    </ContentPage.Content>
</ContentPage>